<section id="feedback" class="w-full px-4 py-16">
  <div class="max-w-3xl mx-auto mb-12">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-6">
      Leave us your feedback
    </h2>
    <p class="text-gray-400 text-center">
      Your input helps us improve AirClip!
    </p>
  </div>

  <div
    class="bg-white/5 backdrop-blur-md rounded-2xl p-8 border border-white/10 shadow-md mx-auto flex flex-col md:flex-row w-fit"
  >
    <!-- Formulario -->
    <form
      id="feedback-form"
      class="flex flex-col items-center space-y-4"
      onsubmit="submitFeedback(event)"
    >
      <input
        name="name"
        placeholder="Your name (optional)"
        class="w-[280px] px-4 py-2 rounded bg-white text-black"
      />
      <input
        name="email"
        placeholder="Your email (optional)"
        class="w-[280px] px-4 py-2 rounded bg-white text-black"
      />
      <textarea
        name="message"
        required
        placeholder="Your feedback..."
        class="w-[280px] min-h-[100px] px-4 py-2 rounded bg-white text-black"
      ></textarea>
      <button
        type="submit"
        class="w-[280px] text-white px-6 py-2 rounded-2xl bg-gradient-to-r from-[#00bcd4] to-[#14e0c9] hover:opacity-90 transition"
      >
        Send
      </button>
    </form>

    <div class="text-white pl-4 mt-8 md:mt-0 shrink-0">
      <h3 class="text-lg font-semibold mb-2">Why share feedback?</h3>
      <p class="text-sm text-gray-300 leading-relaxed">
        Your ideas help us shape AirClip.<br /> Whether it's a bug,<br />
        feature request, or just a thought â€” <br />we'd love to hear it!
      </p>
    </div>
  </div>
</section>

<script type="module" src="/js/feedback.js"></script>
