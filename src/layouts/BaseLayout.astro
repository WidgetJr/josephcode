---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
const { title = "Joseph Code" } = Astro.props;
---

<html lang="es" class="bg-[#000c0f]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <!-- <link rel="icon" type="image/png" href="/assets/airclip_icon_white.png" /> -->
  </head>
  <body class="text-white font-sans scroll-smooth min-h-screen relative">
    <!-- Halo background effect replicating "VISION FOR THE FUTURE" -->
    <div class="fixed inset-0 -z-10 bg-[#000c0f]">
      <div class="absolute inset-0 flex items-center justify-center">
        <div
          class="w-[600px] h-[600px] bg-[radial-gradient(circle,#00ffd5_0%,#003b3e_40%,#000c0f_75%)] rounded-full blur-[120px] opacity-70"
        >
        </div>
      </div>
    </div>

    <Navbar />
    <slot />
  </body>
</html>
